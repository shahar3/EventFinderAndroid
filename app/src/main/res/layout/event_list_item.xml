<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/event_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_face_black_48dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/add_event_margin"
        android:layout_marginLeft="@dimen/add_event_margin">
        <TextView
            android:id="@+id/event_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_place_holder"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/last_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_msg_place_holder"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/add_event_margin"
        android:layout_marginRight="@dimen/add_event_margin">

        <TextView
            android:id="@+id/list_item_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="1.1.2015"/>

        <TextView
            android:id="@+id/list_item_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:00-23:30"/>
    </LinearLayout>
</LinearLayout>